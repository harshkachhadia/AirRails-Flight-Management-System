<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>Name on card</th>
      <th>Card number</th>
      <th>Expiration date</th>
      <th>Cvv</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if current_user && current_user.admin %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.address %></td>
        <td><%= user.name_on_card %></td>
        <td><%= user.card_number %></td>
        <td><%= user.expiration_date %></td>
        <td><%= user.cvv %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% if user.admin%>
          <%next %>>
        <%end %>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

   <%= link_to 'New User', new_user_path %>

  <% else %>
    <% @users.each do |user| %>
    <%if current_user.id == user.id %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.address %></td>
        <td><%= user.name_on_card %></td>
        <td><%= user.card_number %></td>
        <td><%= user.expiration_date %></td>
        <td><%= user.cvv %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% if user.admin%>
          <%next %>>
        <%end %>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end %>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>



